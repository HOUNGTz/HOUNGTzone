<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:pointerIcon="context_menu"
    tools:context=".modules.screens.SignUpScreen">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:contentDescription="@string/book_lover"
        app:srcCompat="@drawable/book_lover_" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView1"
            style="@style/FormLable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginBottom="9dp"
            android:text="@string/sign_up_pag"
            android:textColor="#F48B6A"
            android:textSize="27sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck"
            tools:text="@string/sign_up_pag" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/textInputEditText"
                style="@style/FormLable"
                android:layout_width="363dp"
                android:layout_height="42dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/edit_round"
                android:backgroundTint="#EDEAEA"
                android:drawableEnd="@mipmap/username"
                android:hint="@string/username"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="#262626"
                android:textSize="16sp"
                tools:ignore="Autofill,TouchTargetSizeCheck" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/textInputEditText2"
                style="@style/FormLable"
                android:layout_width="363dp"
                android:layout_height="40dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/edit_round"
                android:backgroundTint="#EDEAEA"
                android:drawableEnd="@mipmap/email"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="#262626"
                android:textSize="16sp"
                tools:ignore="Autofill,TouchTargetSizeCheck" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/editTextTextPassword"
                style="@style/FormLable"
                android:layout_width="363dp"
                android:layout_height="42dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/edit_round"
                android:backgroundTint="#EDEAEA"
                android:drawableEnd="@mipmap/password"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="#262626"
                android:textSize="16sp"
                tools:ignore="Autofill,TouchTargetSizeCheck,TextContrastCheck" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/editTextConfirmPassword"
                style="@style/FormLable"
                android:layout_width="363dp"
                android:layout_height="40dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/edit_round"
                android:backgroundTint="#EDEAEA"
                android:drawableEnd="@mipmap/password"
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="#262626"
                android:textSize="16sp"
                tools:ignore="Autofill,TouchTargetSizeCheck,TextContrastCheck" />

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_marginTop="18dp"
        android:backgroundTint="#58B4DD"
        android:text="@string/sing_up"
        android:textSize="16sp"
        android:textStyle="bold"
        app:iconTint="#35B5EF"
        tools:ignore="TextContrastCheck"
        tools:text="@string/sing_up" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="If you already have an account? | Sign In"
        android:textAlignment="center"
        android:textSize="16sp"
        tools:ignore="HardcodedText"
        tools:text="@string/opt_sign_in" />


</LinearLayout>